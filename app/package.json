{
  "name": "hops-example",
  "version": "1.0.0",
  "description": "example of hops in action",
  "main": "src/main.js",
  "license": "MIT",
  "repository": {},
  "scripts": {
    "start": "hops",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "hops": "file:.."
  },
  "hops": {
    "locations": [
      "/"
    ]
  },
  "jest": {
    "cacheDirectory": ".tmp/jest",
    "moduleNameMapper": {
      "^.+\\.(html|css|svg|jpg|png|gif)$": "identity-obj-proxy"
    }
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  }
}
