  "scripts": {
    "preinstall": "/usr/bin/env bash -c \"[[ $npm_execpath = *'yarn'* ]] || (echo 'use yarn' && exit 1)\"",
    "start": "cd packages/template-react; yarn start",
    "start:graphql": "cd packages/template-graphql; yarn start",
    "test": "jest",
    "lint": "eslint 'packages/**/*.js'",
    "release": "lerna publish",
    "release:major": "lerna publish major",
    "release:candidate": "lerna publish premajor --preid=rc --npm-tag=next",
    "release:candidate:feature": "lerna publish preminor --preid=rc --npm-tag=next",
    "release:next": "lerna publish prerelease --preid=rc --npm-tag=next",
    "reset": "git clean -dfx && yarn",
    "fmt": "prettier --write '**/*.{js,json,css}' '**/README.md'"
  },
  "canarist": {
    "repositories": [
      {
        "repository": ".",
        "commands": [
          ""
        ]
      },
      {
        "repository": "https://github.com/foosbyte/kicker-trainer.git",
        "commands": [
          "yarn build -p",
          "yarn test"
        ]
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --list-different"
    ],
    "**/README.md": [
      "prettier --list-different"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "proseWrap": "never",
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:node/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "node"
    ],
    "rules": {
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ],
      "node/no-missing-require": [
        "error",
        {
          "tryExtensions": [
            ".js",
            ".jsx",
            ".node",
            ".ts",
            ".tsx",
            ".json"
          ]
        }
      ],
      "prettier/prettier": "error",
      "no-console": "off",
      "no-process-exit": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "**/node_modules/**",
    "**/template-*/**",
    "**/__tests__/fixtures/**",
    "**/spec/fixtures/**"
  ],
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "projects": [
      "<rootDir>/packages/!(spec)",
      "<rootDir>/packages/spec/integration/*"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.0",
    "canarist": "^1.2.1",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^9.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^2.0.0",
    "jest": "^23.4.2",
    "lerna": "^3.0.3",
    "lint-staged": "^8.0.0",
    "prettier": "^1.14.0"
  }
}
